[user]
	name = Ikuo Degawa
	email = degawa@ikuwow.com
[core]
    editor = nvim
    quotepath = false
[color]
    ui = true
[grep]
    lineNumber = true
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[alias]
    s = status
    b = branch
    d = diff
    a = add
    c = commit
    ch = checkout
    sw = switch
    l = log
    r = remote
    ru = remote update
    bl = blame
    gr = grep
    clone = clone --recursive
[credential]
    helper = cache
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
    required = true
	process = git-lfs filter-process
[include]
    path = ~/.gitconfig.secrets
[push]
	default = current
