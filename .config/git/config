[user]
	name = Ikuo Degawa
	email = ikuwow@gmail.com
[core]
    editor = nvim
    quotepath = false
[color]
    ui = true
[grep]
    lineNumber = true
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[alias]
    s = status
    b = branch
    d = diff
    a = add
    c = commit
    ch = checkout
    sw = switch
    l = log
    r = remote
    ru = remote update
    bl = blame
    grepi = grep --ignore-case
    clone = clone --recursive
    home = "!f() { \
        if git rev-parse --verify --quiet main > /dev/null; then branch='main'; \
        elif git rev-parse --verify --quiet master > /dev/null; then branch='master'; \
        else echo 'Error: main/master branch does not exist.' && exit 1; \
        fi; \
        git switch \"$branch\" && git pull; \
        }; f"
[credential]
    helper = cache
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
    required = true
	process = git-lfs filter-process
[include]
    path = ~/.gitconfig.secrets
[push]
	default = current
[pull]
	rebase = false
[init]
	templateDir = ~/.config/git/template
	defaultBranch = main
[rerere]
	enabled = true
[fetch]
	prune = true
