theme = Japanesque

shell-integration-features = no-cursor, sudo
# no-cursor: Specify cursor style manually
# sudo: Enable shell integration of sudo command

# Specify cursor style
cursor-style = block
cursor-style-blink = true

# Default window size
window-height = 65
window-width = 100

macos-titlebar-style = tabs

keybind = global:cmd+shift+space=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-size = 1080px, 50%

font-family = "Monaco"
font-style = Regular
font-size = 12
# Disable ligatures
font-feature = -calt, -liga, -dlig

# Shift+Enter keybind for Claude Code
# Ref: https://github.com/ghostty-org/ghostty/discussions/7419
keybind = shift+enter=text:\x1b\r
